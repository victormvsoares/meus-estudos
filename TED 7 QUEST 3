#include <stdio.h>
#include <stdlib.h>

int main(){

    int n;

   printf("Digite um numero:");
   scanf("%d",&n);

   invert(n);

   return 0;
}

int invert(int n){

    if(n==0){

      return n;

    }

     else{

     printf("%d", n % 10);

     n=n / 10;

     return invert(n);

    }

return 0;

 }
